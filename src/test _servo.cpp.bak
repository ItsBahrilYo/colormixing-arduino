#include <Arduino.h>
#include <Servo.h>

Servo myServo;  // Membuat objek servo

void setup() {
  Serial.begin(9600);
  myServo.attach(9);  // Hubungkan servo ke pin digital 9 (bisa diganti)
  Serial.println("Tes servo dimulai...");
}

void loop() {
  // Gerakkan servo dari 0째 ke 180째
  for (int pos = 0; pos <= 180; pos++) {
    myServo.write(pos);
    delay(15);  // jeda 15ms agar pergerakan halus
  }

  // Gerakkan servo dari 180째 ke 0째
  for (int pos = 180; pos >= 0; pos--) {
    myServo.write(pos);
    delay(15);
  }

  Serial.println("Servo bergerak bolak-balik");
}
